extends layout

block content
  h1= title
  extends layout

  - var results = [{"BoxingStyle":"IndianStyle","GlovesSize":12,"BoxingGlovesColor":"red"},{"BoxingStyle":"KickBoxing","GlovesSize":10,"BoxingGlovesColor":"blcak"},{"BoxingType":"UFC","GlovesSize":Freesize,"BoxingGlovesColor":"orange"}];
  div(class="container-fluid")
    div(class="row")
    each item in results
      div(class="col-sm-2" width="215px") BoxinStyle:#{item.BoxinStyle}, GlovesSize:#{item.GlovesSize}, BoxingGlovesColor:#{item.BoxingGlovesColor}
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].BoxinStyle}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
