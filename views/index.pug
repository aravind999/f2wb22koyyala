extends layout

block content
  h1= title
  p This is my second server  #{title} 
  button(type="button", class="btn btn-danger" onClick="doBump()") Press Me for the contents
  
  div(id="bump") Bump the count
  script. 
    var count=0;
    var bump=1;
    function doBump() {
      count=count+bump;
      bump=bump+1;
      document.getElementById("bump").innerHTML=`Count ${count} with bump ${bump}.`;
    }
 
